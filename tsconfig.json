{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noEmit": false,
    "target": "ES6",
    "module": "ES2020",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
